<Window x:Class="DsvDownloader.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DSV Video Downloader" Height="360" Width="640" MinHeight="320" MinWidth="560">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Paste your DSV video URL (.mp4?token=...)" FontSize="16"/>

        <DockPanel Grid.Row="1" Margin="0,8,0,0">
            <TextBox x:Name="UrlBox" MinWidth="400" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0,0,0">
                <Button x:Name="PasteBtn" Content="Paste" Width="80" Margin="0,0,8,0" Click="PasteBtn_Click"/>
                <Button x:Name="ValidateBtn" Content="Validate" Width="80" Click="ValidateBtn_Click"/>
            </StackPanel>
        </DockPanel>

        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock Text="Save to:" VerticalAlignment="Center"/>
            <TextBlock x:Name="FolderText" Margin="8,0,8,0" VerticalAlignment="Center"/>
            <Button x:Name="ChooseFolderBtn" Content="Choose Folder" Width="120" Click="ChooseFolderBtn_Click"/>
        </DockPanel>

        <StackPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock x:Name="StatusText" TextWrapping="Wrap"/>
            <ProgressBar x:Name="Progress" Height="18" Minimum="0" Maximum="100" Margin="0,8,0,0"/>
            <DockPanel Margin="0,6,0,0">
                <TextBlock x:Name="ProgressDetail"/>
                <Button x:Name="CancelBtn" Content="Cancel" DockPanel.Dock="Right" Width="100" Click="CancelBtn_Click" Visibility="Collapsed"/>
            </DockPanel>
        </StackPanel>

        <DockPanel Grid.Row="4" Margin="0,12,0,0" LastChildFill="False">
            <Button x:Name="DownloadBtn" Content="Download" Width="120" Height="32" Click="DownloadBtn_Click"/>
            <TextBlock x:Name="VersionText" DockPanel.Dock="Right" Text="v3" VerticalAlignment="Center" Foreground="Gray" Margin="8,0,0,0"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="OpenBtn" Content="Open" Width="90" Margin="0,0,8,0" Click="OpenBtn_Click" Visibility="Collapsed"/>
                <Button x:Name="ShowBtn" Content="Show in Explorer" Width="140" Click="ShowBtn_Click" Visibility="Collapsed"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
